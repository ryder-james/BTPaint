<Page
    x:Class="BTPaint.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BTPaint"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <Page.Resources>
        <BitmapImage x:Key="pencilImage" UriSource="Assets/Icons/eraser.png"/>
        <BitmapImage x:Key="eraserImage" UriSource="Assets/Icons/pencil.png"/>
    </Page.Resources>
    
    <!-- Grid Definitions -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="9*"/>
        </Grid.ColumnDefinitions>

        <!-- Top Bar -->
        <CommandBar DefaultLabelPosition="Right" Grid.ColumnSpan="2">
            <AppBarButton Icon="OpenFile"  Label="File"> <!-- File Button -->
                <AppBarButton.Flyout>
                    <Flyout>
                        <StackPanel Orientation="Vertical">
                            <AppBarButton x:Name="saveBtn" Content="Save" Click="saveBtn_Click"></AppBarButton>
                            <AppBarButton x:Name="loadBtn" Content="Load" Click="loadBtn_Click"></AppBarButton>
                            <AppBarButton x:Name="importBtn" Content="Import" Click="importBtn_Click"></AppBarButton>
                            <AppBarButton x:Name="exitBtn" Content="Exit" Click="exitBtn_Click"></AppBarButton>
                        </StackPanel>
                    </Flyout>
                </AppBarButton.Flyout>
            </AppBarButton>
            <AppBarButton Icon="Edit"  Label="Edit"> <!-- Edit Button -->
                <AppBarButton.Flyout>
                    <Flyout>
                        <StackPanel Orientation="Vertical">
                            <AppBarButton x:Name="resizeBtn" Content="Resize" Click="resizeBtn_Click"></AppBarButton>
                            <AppBarButton x:Name="editBtn" Content="Edit" Click="editBtn_Click"></AppBarButton>
                        </StackPanel>
                    </Flyout>
                </AppBarButton.Flyout>
            </AppBarButton>
        </CommandBar>

        <!-- Collapse Side Bar Button -->
        <AppBarButton x:Name="collapseSideBarBtn" Icon="More" Click="collapseSideBarBtn_Click"/>

        <!-- Canvas -->
        <Canvas x:Name="MainCanvas"  Grid.Row="1" Grid.ColumnSpan="2"
                    Background="BlanchedAlmond"
                    PointerPressed="MainCanvas_PointerPressed"
                    PointerReleased="MainCanvas_PointerReleased"
                    Tapped="MainCanvas_Tapped"
                    DoubleTapped="MainCanvas_DoubleTapped"
                    RightTapped="MainCanvas_RightTapped"
                    Holding="MainCanvas_Holding"
                    SizeChanged="MainCanvas_SizeChanged">

            <Image x:Name="ImageControl"/>
        </Canvas>


        <!-- Side Bar -->
        <SplitView x:Name="SideBar"
                   Grid.ColumnSpan="2"
                   HorizontalAlignment="Left" 
                   Grid.Row="1" 
                   IsPaneOpen="True"
                   DisplayMode="Overlay">
            <SplitView.Pane>
                <Grid Grid.RowSpan="3" Grid.ColumnSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="6.5*"/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="3*"/>
                    </Grid.RowDefinitions>
                    <!-- Color Picker -->
                    <ColorPicker x:Name="colorPicker"
                            ColorSpectrumShape="Ring"
                            Color="Black">
                    </ColorPicker>

                    <!-- Sliders & TextBlocks -->
                    <StackPanel Orientation="Vertical" Grid.Row="1">
                        <TextBlock Text="Size" HorizontalAlignment="Center" Margin="0 10 0 0"/>
                        <Slider x:Name="sizeSlider" Margin="10 0 10 0" Value="10"/>

                        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" Margin="10">
                            <Button x:Name="pencilBtn" Margin="10" Height="50" Width="50" Click="pencilBtn_Click" Background="White">
                                <Button.Content>
                                    <Image Source="{StaticResource ResourceKey=pencilImage}"/>
                                </Button.Content>
                            </Button>
                            <Button x:Name="eraserBtn" Margin="10" Height="50" Width="50" Click="eraserBtn_Click" Background="White">
                                <Button.Content>
                                    <Image Source="{StaticResource ResourceKey=eraserImage}" />
                                </Button.Content>
                            </Button>
                        </StackPanel>
                    </StackPanel>

                    <!-- Buttons -->

                    <!-- List of Brushes : This will be populated in code -->
                    <ListView x:Name="BrushList" ScrollViewer.VerticalScrollBarVisibility="Visible" Grid.Row="3"></ListView>
                </Grid>
            </SplitView.Pane>
        </SplitView>
    </Grid>
</Page>
